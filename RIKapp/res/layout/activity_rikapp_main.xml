<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dk.ucn.datamatiker.rikapp.RIKappMainActivity" >

    <Button
        android:id="@+id/maalbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hygbtn"
        android:layout_alignBottom="@+id/hygbtn"
        android:layout_marginLeft="45dp"
        android:layout_toRightOf="@+id/hygbtn"
        android:text="@+string/maaling_btn" />

    <Button
        android:id="@+id/hygbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="76dp"
        android:text="@+string/hygiejne_btn" />

    <Button
        android:id="@+id/skemabtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/maalbtn"
        android:layout_below="@+id/maalbtn"
        android:layout_marginTop="37dp"
        android:text="@string/skema_btn" />

    <Button
        android:id="@+id/kontaktbtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/skemabtn"
        android:layout_below="@+id/skemabtn"
        android:layout_marginTop="67dp"
        android:text="@string/kontakt_btn" />

</RelativeLayout>